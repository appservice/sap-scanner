<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewMpkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvMpkNameString"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editMpkName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewMpkValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvMpkValueString"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextMpkValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textViewMpkBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvMpkBudgetString"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <AutoCompleteTextView
        android:id="@+id/editTextMpkBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text|textAutoComplete" />

</LinearLayout><!-- From: file:/home/luke/AndroidStudioProjects/sap-scanner/res/layout/dialog_add_mpk.xml -->