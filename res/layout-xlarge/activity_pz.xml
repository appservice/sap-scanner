<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".PzActivity">

    <ImageButton
        android:id="@+id/imgBtnSearchPzActiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgBtnScanPzActiv"
        android:layout_alignRight="@+id/imgBtnScanPzActiv"
        android:layout_marginRight="10dp"
        android:text="Skanuj"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/imgBtnScanPzActiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_button_pz"
        android:layout_marginLeft="20dp"
        android:layout_gravity="right"
        android:layout_above="@+id/textViewIndexPzActiv"
        android:layout_toRightOf="@+id/editTextAddValuePzActiv" />

    <Button
        android:id="@+id/btnAddPzActiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj"
        android:width="100dp"
        android:layout_below="@+id/textViewUnitPzActiv"
        android:layout_alignRight="@+id/editTextAddValuePzActiv"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Nazwa:" />

    <TextView
        android:id="@+id/textViewIndexPzActiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewNamePzActiv"
        android:layout_below="@+id/imgBtnSearchPzActiv"
        android:layout_marginTop="28dp"
        android:text=""
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewNamePzActiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/textView6"
        android:text=""
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextAddValuePzActiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="numberDecimal"
        android:layout_gravity="right"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginLeft="15dp">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView6"
        android:layout_below="@+id/textViewNamePzActiv"
        android:layout_marginTop="15dp"
        android:text="Ilość:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewIndexPzActiv"
        android:layout_alignBottom="@+id/textViewIndexPzActiv"
        android:layout_alignRight="@+id/textView6"
        android:text="Index:" />

    <TextView
        android:id="@+id/textViewAmountPzActiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/textViewNamePzActiv"
        android:gravity="right"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignParentTop="true"
        android:text="Szukaj w bazie"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tvWydaneOpis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ilość:"
        android:layout_gravity="right|bottom"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textViewAmountPzActiv" />

    <TextView
        android:id="@+id/textViewUnitPzActiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/tvWydaneOpis"
        android:layout_toRightOf="@+id/imgBtnSearchPzActiv" />

    <TextView
        android:id="@+id/textViewStockPzActiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignTop="@+id/tvWydaneOpis"
        android:layout_alignLeft="@+id/textView4" />

</RelativeLayout>